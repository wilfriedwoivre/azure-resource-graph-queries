{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "queryName": "subscription-inside-specific-management-group",
    "queryCode": "resourcecontainers  | where type == 'microsoft.resources/subscriptions'  | where (properties.managementGroupAncestorsChain) contains 'Sandbox' "
  },
  "resources": [
    {
      "type": "microsoft.resourcegraph/queries",
      "apiVersion": "2018-09-01-preview",
      "name": "[variables('queryName')]",
      "location": "global",
      "properties": {
        "query": "[variables('queryCode')]"
      }
    }
  ]
}